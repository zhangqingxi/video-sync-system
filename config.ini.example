# ============================================================================
# 视频数据同步系统配置文件示例
# 
# Author: Qasim
# Version: 2.0
# Python: 3.11+
# Date: 2025-01-14
#
# 使用说明:
# 1. 复制此文件为 config.ini
# 2. 填入实际的配置信息
# 3. 将 config.ini 添加到 .gitignore
# ============================================================================

# ============================================================================
# 数据库配置
# ============================================================================
[database]
# MySQL连接信息
host = 127.0.0.1
port = 3306
user = your_db_user
password = your_db_password
database = your_database
charset = utf8mb4

# 数据表名称
video_table_name = mac_vod


# ============================================================================
# 第三方API配置
# ============================================================================
[api]
# API基础URL
base_url = https://your-api.com

# API端点
video_list_endpoint = /video/index
video_detail_endpoint = /video/get-video
login_endpoint = /login/check-login

# 认证信息
username = your_email@example.com
password = your_password
domain = your.domain.com

# 分页配置
page_size = 50

# 超时配置（秒）
connection_timeout = 30
read_timeout = 300

# SSL证书验证（true/false）
verify_ssl = true

# 自定义请求头
referer = https://your.domain.com/
origin = https://your.domain.com
user_agent = Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36


# ============================================================================
# 项目状态配置
# ============================================================================
[project_state]
# 状态文件路径
state_file = state.json


# ============================================================================
# AWS S3配置
# ============================================================================
[aws_s3]
# AWS访问密钥
access_key_id = YOUR_AWS_ACCESS_KEY_ID
secret_access_key = YOUR_AWS_SECRET_ACCESS_KEY

# S3配置
bucket_name = your-bucket-name
region_name = us-east-1

# MediaConvert角色ARN（可选）
media_convert_role = arn:aws:iam::123456789012:role/your-role

# AES加密密钥
encryption_key = your_s3_encryption_key_2025

# 超时配置（秒）
request_timeout = 60


# ============================================================================
# 阿里云OSS配置
# ============================================================================
[oss]
# OSS访问密钥
access_key_id = YOUR_ALIYUN_ACCESS_KEY_ID
secret_access_key = YOUR_ALIYUN_SECRET_ACCESS_KEY

# OSS配置
region = cn-hangzhou
bucket_name = your-bucket-name

# AES加密密钥
encryption_key = your_oss_encryption_key_2025


# ============================================================================
# 站点同步配置
# ============================================================================
[site]
# 目标站点域名（多个域名用逗号分隔）
domains = https://site1.example.com,https://site2.example.com

# API认证令牌
api_token = your_site_api_token

# API端点
sync_endpoint = /api/sync/update
clean_endpoint = /api/sync/cleanup

# 超时配置（秒）
timeout = 30
